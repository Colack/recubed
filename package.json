{
  "name": "recubed-scripts",
  "version": "1.0.0",
  "description": "package.json for recubed cleanup",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "prettier": "prettier --write ./src/**/*.ts",
    "tsc-build": "npx tsc ./src/*.ts --outDir ./dist",
    "mkdir-js": "mkdir -p ./dist/js",
    "mkdir-css": "mkdir -p ./dist/css",
    "mv-js": "mv ./dist/*.js ./dist/js/",
    "generate-html": "node ./dist/js/generateHTML.js",
    "generate-css": "node ./dist/js/generateCSS.js",
    "rm-html": "rm ./dist/js/generateHTML.js",
    "rm-css": "rm ./dist/js/generateCSS.js",
    "cp-assets": "cp -r ./assets ./dist/",
    "build": "npm run clean && npm run tsc-build && npm run mkdir-js && npm run mkdir-css && npm run mv-js && npm run generate-html && npm run generate-css && npm run rm-html && npm run rm-css && npm run cp-assets"
  },
  "author": "colack",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@types/node": "^22.7.6",
    "typescript": "^5.6.3",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  }
}
